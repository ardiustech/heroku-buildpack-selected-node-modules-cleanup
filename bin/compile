#!/usr/bin/env bash
# bin/compile BUILD_DIR CACHE_DIR ENV_DIR

BUILD_DIR=$1

echo "-----> Deleting node_modules/@babel..."
find $BUILD_DIR -name 'node_modules/@babel' -type d -prune -print -exec rm -rf '{}' \;

echo "-----> Deleting node_modules/.cache..."
find $BUILD_DIR -name 'node_modules/.cache' -type d -prune -print -exec rm -rf '{}' \;

echo "-----> Deleting node_modules/flowgen..."
find $BUILD_DIR -name 'node_modules/flowgen' -type d -prune -print -exec rm -rf '{}' \;

echo "-----> Deleting node_modules/typescript..."
find $BUILD_DIR -name 'node_modules/typescript' -type d -prune -print -exec rm -rf '{}' \;